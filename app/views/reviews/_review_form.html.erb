<div class="row">
  <div class="well col-md-8">
    <%= form_for([@recipe, @recipe.reviews.build]) do |f| %>
      <p>
        <%= f.label :title, 'Headline' %><br>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label :body, 'Review' %><br>
        <%= f.text_area :body %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </div>
</div>